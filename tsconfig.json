{
  "compilerOptions": {
    "target": "ES2020", // Specifies the ECMAScript target version
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,  // Ativado para permitir default imports
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
